<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey_f8"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="4dp"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>
<!---
        <ImageView
            android:id="@+id/iv_explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_explore_24" />
-->
        <ImageView
            android:id="@+id/iv_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_play_circle_outline_48" />

        <ImageView
            android:id="@+id/iv_system_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:clickable="true"
            android:contentDescription="@string/system_settings"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_settings_24" />

        <ImageView
            android:id="@+id/iv_camera_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:clickable="true"
            android:contentDescription="@string/camera_settings"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_camera_24" />

        <ImageView
            android:id="@+id/iv_rtsp_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector"
            android:clickable="true"
            android:contentDescription="@string/rtsp_video"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_video_camera_back_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/iv_telemetry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/grey_ee"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        android:text="T E L E M E T R Y"/>
</LinearLayout>